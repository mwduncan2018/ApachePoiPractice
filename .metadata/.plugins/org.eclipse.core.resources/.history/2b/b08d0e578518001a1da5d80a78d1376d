class Practice1 {

	@Test
	void demo01_writeDocxToFile() throws IOException {
		String name = "demo1.docx";
		XWPFDocument document = new XWPFDocument();
		FileOutputStream out = new FileOutputStream(
				new File("src/test/resources/officialReports/" + name));
		document.write(out);
		out.close();
	}
	
